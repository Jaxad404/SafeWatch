#:import MapSource kivy_garden.mapview.MapSource

#56.1304Â° N, 106.3468
<MapScreen>:
    name: 'Map'
    md_bg_color: get_color_from_hex('#88BDF2')

    MDRelativeLayout:
        MapView:
            id: map_view
            zoom: 13
            lat: 43.651070
            long: -79.347015


    MDFloatLayout:
        MDBottomNavigation:
            selected_color_background: None
            text_color_normal: .9, .9, .9, 1
            text_color_active: .9, .9, .9, 1
            theme_text_color: "Custom"
            panel_color: get_color_from_hex('#03396c')
            theme_icon_color: "Custom"
            theme_icon_color: get_color_from_hex('#7f8e9e')
            size_hint_y: .1
            spacing: dp(32)
            radius: [20,20,0,0]

            MDBottomNavigationItem:
                icon: 'home'
                text: 'Home'
                icon_size: dp(50)
                on_tab_release:
                    app.active_tab = 'Home'
                    root.manager.current = 'landingPage'

            MDBottomNavigationItem:
                icon: 'magnify'
                text: 'Map'
                icon_size: dp(50)
                current: True
                on_tab_release:
                    app.active_tab = 'Map'
                    root.manager.current = 'Map'

            MDBottomNavigationItem:
                icon: 'account'
                text: 'Report'
                icon_size: dp(50)
                #text_color_active: 0, 1, 0, 1 if root.active_tab == "Report" else .9, .9, .9, 1
                on_tab_release:
                    app.active_tab = 'Report'
                    root.manager.current = 'Report'
