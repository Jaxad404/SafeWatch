<SplashScreen>:
    name: "Splash"
    md_bg_color: 0,0,0,1 #get_color_from_hex('#BDDDFC')

    MDFloatLayout:
        FitImage:
            source: 'assets/images/justlogo.jpg'
            size_hint: .45, .25
            pos_hint: {"center_x": .5, "center_y": .6}
            radius: [30,]
            #canvas.before:
                #Ellipse:
                    #size: 130, 130
                    #pos: 110, 250

        MDLabel:
            text: "SAFE WATCH"
            halign: "center"
            theme_text_color: "Custom"
            text_color: get_color_from_hex('#2e003e')
            #text_color: get_color_from_hex('#8d5524')
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .15}

        MDLabel:
            text: "Keep a Safe Watch with us"
            halign: "center"
            theme_text_color: "Custom"
            #3d2352
            #3d1e6d
            text_color: get_color_from_hex('#005C5C')
            #get_color_from_hex('#3d1e6d')
            font_size: "17sp"
            pos_hint: {"center_x": .5, "center_y": .10}