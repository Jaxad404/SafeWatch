<SignUPScreen>:
    name: "SignUp"
    md_bg_color: 0,0,0,1 #get_color_from_hex('#88BDF2')

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 40
        size_hint: 1, 1
        elevation: 5


        MDTextField:
            id: fullname
            hint_text: "Full Name"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            icon_right: "account-details"
            theme_text_color: "Custom"
            text_color_normal: get_color_from_hex('#005b96')
            text_color_focus: "teal"
            icon_right_color_normal: get_color_from_hex('#005b96')
            hint_text_color_normal: "white"
            hint_text_color_focus: "teal"
            line_color_normal: get_color_from_hex('#005b96')
            line_color_focus: "green"


        MDTextField:
            id: username
            hint_text: "Username"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            icon_right: "account"
            theme_text_color: "Custom"
            text_color_normal: get_color_from_hex('#005b96')
            text_color_focus: "teal"
            icon_right_color_normal: get_color_from_hex('#005b96')
            hint_text_color_normal: "white"
            hint_text_color_focus: "teal"
            line_color_normal: get_color_from_hex('#005b96')
            line_color_focus: "green"

        MDTextField:
            id: address
            hint_text: " Street Address"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            icon_right: "location-enter"
            theme_text_color: "Custom"
            text_color_normal: get_color_from_hex('#005b96')
            text_color_focus: "teal"
            icon_right_color_normal: get_color_from_hex('#005b96')
            hint_text_color_normal: "white"
            hint_text_color_focus: "teal"
            line_color_normal: get_color_from_hex('#005b96')
            line_color_focus: "green"

        MDTextField:
            id: phone
            hint_text: "Phone Number"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            icon_right: "cellphone-dock"
            theme_text_color: "Custom"
            text_color_normal: get_color_from_hex('#005b96')
            text_color_focus: "teal"
            icon_right_color_normal: get_color_from_hex('#005b96')
            hint_text_color_normal: "white"
            hint_text_color_focus: "teal"
            line_color_normal: get_color_from_hex('#005b96')
            line_color_focus: "green"


        MDTextField:
            id: email
            hint_text: "Email"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            icon_right: "email"
            theme_text_color: "Custom"
            text_color_normal: get_color_from_hex('#005b96')
            text_color_focus: "teal"
            icon_right_color_normal: get_color_from_hex('#005b96')
            hint_text_color_normal: "white"
            hint_text_color_focus: "teal"
            line_color_normal: get_color_from_hex('#005b96')
            line_color_focus: "green"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            icon_right: "eye-off"
            theme_text_color: "Custom"
            text_color_normal: get_color_from_hex('#005b96')
            text_color_focus: "teal"
            icon_right_color_normal: get_color_from_hex('#005b96')
            hint_text_color_normal: "white"
            hint_text_color_focus: "teal"
            line_color_normal: get_color_from_hex('#005b96')
            line_color_focus: "green"


        MDRaisedButton:
            text: "Register"
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: app.registerUser(fullname.text, username.text, email.text, password.text, phone.text, address.text)

        MDTextButton:
            text: "Already have an account? Login"
            pos_hint: {"center_x": 0.5}
            theme_text_color: "Custom"
            text_color: "teal" #get_color_from_hex('#2e003e')
            on_release: root.manager.current = 'login'